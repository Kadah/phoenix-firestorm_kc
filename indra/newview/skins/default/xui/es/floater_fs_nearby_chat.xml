<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="nearby_chat" title="Chat local">
	<floater.string name="chatbox_label">
		Decir en el chat local
	</floater.string>
	<layout_stack name="ls_control_panel">
		<layout_panel name="lp_chat_history_btn">
			<button tool_tip="Abre la transcripción del chat local" name="chat_history_btn"/>
		</layout_panel>
		<layout_panel name="lp_chat_history_muted_btn">
			<button tool_tip="Muestra el chat silenciado en la transcripción del chat local" name="chat_history_muted_btn"/>
		</layout_panel>
	</layout_stack>
	<layout_stack name="ls_chat">
		<layout_panel name="panel_im_control_lp">
			<layout_stack name="im_panels">
				<layout_panel name="chat_layout_panel">
					<layout_stack name="input_panels">
						<layout_panel name="input_button_layout_panel">
							<spinner name="ChatChannel" tool_tip="Canal al que enviar el chat. Activado en Preferencias  -> Chat -> Firestorm -> Mostrar selector de canal en la barra de chat."/>
						</layout_panel>
						<layout_panel name="chat_type_layout_panel">
							<combo_box name="chat_type" tool_tip="Susurrar = 10m, Hablar = 20m, Gritar = 100m">
								<combo_box.item name="chat_type_whisper" label="Susurrar"/>
								<combo_box.item name="chat_type_say" label="Decir"/>
								<combo_box.item name="chat_type_shout" label="Gritar"/>
							</combo_box>
							<button label="Decir" name="send_chat" tool_tip="Susurrar = 10m, Decir = 20m, Gritar = 100m"/>
						</layout_panel>
					</layout_stack>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
