<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 label="General"
 width="470"
 height="410"
 class="panel_group_general"
 name="general_tab"
 layout="topleft"
 follows="all">
    <panel.string
     name="help_text">
        The General tab contains general information about this group, a list of members, general Group Preferences and member options.

Hover your mouse over the options for more help.
    </panel.string>
    <panel.string
     name="group_info_unchanged">
        General group information has changed
    </panel.string>
    <panel.string
     name="incomplete_member_data_str">
        Retrieving member data
    </panel.string>

   <panel
    name="group_general_panel"
    left="3"
    top="-408"
    height="408"
    width="467"
    follows="all"
    layout="topleft">

    <text
     name="group_key_label"
     left="0"
     top="2"
     width="68"
     height="20"
     type="string"
     follows="top|left"
     layout="topleft">
    Group Key:
    </text>

    <view_border
      left_pad="0"
      top="0"
      width="282"
      height="18"
      bevel_style="in"
      follows="left|top|right"
      name="info_border" />
     <text_editor
      name="group_key"
      label="Group Key:"
      left_delta="0"
      top_delta="0"
      width="282"
      height="20"
      h_pad="4"
      v_pad="3"
      bg_visible="false"
      enabled="false"
      allow_scroll="false"
      initial_value="(loading...)"
      follows="top|left|right"
      layout="topleft" />


    <button
     name="copy_uri"
     left_pad="4"
     right="-1"
     height="20"
     label="Copy URI"
     follows="top|right" />

    <text
     name="prepend_founded_by"
     left="0"
     top_pad="4"
     width="68"
     height="20"
     type="string"
     follows="top|left"
     layout="topleft">
    Founded by:
    </text>

    <text
     icon_positioning="left"
     name="founder_name"
     left_pad="4"
     height="20"
     width="278"
     initial_value="(loading...)"
     type="string"
     use_ellipses="true"
     follows="top|left|right"
     layout="topleft" />

    <button
     name="copy_name"
     left_pad="4"
     right="-1"
     height="20"
     label="Copy Name"
     follows="top|right" />
	 
    <texture_picker
     name="insignia"
     tool_tip="Click to choose a picture"
     height="110"
     left="0"
     top_pad="4"
     width="100"
     default_image_name="Generic_Group_Large"
     label=""
     no_commit_on_selection="true"
     follows="left|top"
     layout="topleft" />

    <text_editor
     bg_readonly_color="Transparent"
     name="charter"
     left_pad="4"
     top_pad="-109"
     right="-1"
     height="86"
     type="string"
     follows="left|top|right"
     max_length="511"
     parse_urls="true"
     word_wrap="true"
     layout="topleft">
    Group Charter
    </text_editor>

    <text
     name="join_cost_text"
     width="246"
     top_pad="8"
     height="20"
     halign="right"
     type="string"
     visible="true"
     follows="top|right"
     layout="topleft">
    Join (L$00000)
    </text>

    <button
     name="btn_join"
     top_delta="-4"
     left_pad="4"
     right="-1"
     height="20"
     label="Join now!"
     visible="true"
     follows="top|right"
     layout="topleft" />

    <name_list
     left="0"
     top_pad="4"
     height="115"
     column_padding="0"
     draw_heading="true"
     heading_height="23"
     name="visible_members"
     multi_select="true"
     short_names="false"
     follows="all"
     layout="topleft">
        <name_list.columns
         label="Member"
         name="name"
         relative_width="0.4" />
        <name_list.columns
         label="Title"
         name="title"
         relative_width="0.4" />
        <name_list.columns
         label="Status"
         name="status"
         relative_width="0.2" />
    </name_list>

    <layout_stack
     name="group_preferences_layout"
     top_pad="4"
     right="-1"
     height="131"
     orientation="horizontal"
     follows="bottom|left|right"
     layout="topleft">

    <layout_panel
     width="228"
     name="user_preferences_container"
     bevel_style="in"
     border="true"
     user_resize="true"
     follows="top|left|right"
     layout="topleft">

        <text
         left="0"
         top_pad="4"
         width="300"
         type="string"
         height="16"
         text_color="EmphasisColor"
         name="my_group_settngs_label"
         follows="left|top|right"
         layout="topleft">
        My Group Settings
        </text>

        <check_box
         height="16"
         label="Show in my profile"
         layout="topleft"
         left="0"
         name="list_groups_in_profile"
         tool_tip="Sets whether you want to show this group in your profile"
         top_pad="4"
         width="295" />

        <check_box
         height="16"
         font="SansSerifSmall"
         label="Receive group notices"
         layout="topleft"
         left="0"
         name="receive_notices"
         tool_tip="Sets whether you want to receive Notices from this group.  Uncheck this box if this group is spamming you."
         top_pad="4"
         width="300" />

        <!-- <exodus> -->
        <check_box
         height="16"
         font="SansSerifSmall"
         label="Receive group instant messages"
         layout="topleft"
         left="0"
         name="receive_chat"
         tool_tip="Sets whether you want to participate in group chat for this group."
         top_pad="5"
         width="300" />
        <!-- </exodus> -->

         <text
         name="active_title_label"
         left="0"
         top_pad="9"
         width="200"
         height="12"
         type="string"
         follows="left|top|right"
         layout="topleft">
            Current title:
        </text>

        <combo_box
         follows="left|top|right"
         height="23"
         layout="topleft"
         left="0"
         right="-5"
         name="active_title"
         tool_tip="Sets the title that appears in your avatar's name tag when this group is active."
         top_pad="2" />

    </layout_panel>

    <layout_panel
     name="preferences_divider"
     width="2"
     border="false"
     auto_resize="false"
     user_resize="false"
     follows="top|left|right"
     layout="topleft" />

    <layout_panel
     name="group_preferences_container"
     width="228"
     bevel_style="in"
     border="true"
     user_resize="true"
     follows="top|left|right"
     layout="topleft">


        <text
         follows="left|top|right"
         left="4"
         height="16"
         type="string"
         text_color="EmphasisColor"
         name="group_settngs_label"
         right="-1"
         layout="topleft">
         Group Setup
        </text>

        <check_box
         name="show_in_group_list"
         tool_tip="Let people see this group in search results"
         label="Show in search"
         left="0"
         top_pad="4"
         width="10"
         height="16"
         initial_value="true"
         layout="topleft" />

        <check_box
         name="open_enrollement"
         label="Anyone can join"
         tool_tip="Sets whether this group allows new members to join without being invited."
         top_pad="4"
         left="0"
         height="16"
         width="10"
         layout="topleft" />
        <check_box
         name="check_enrollment_fee"
         tool_tip="Sets whether to require an enrollment fee to join the group"
         label="Cost to join"
         top_pad="4"
         width="10"
         height="16"
         layout="topleft" />
        <spinner
         name="spin_enrollment_fee"
         tool_tip="New members must pay this fee to join the group when Enrollment Fee is checked."
         top_pad="0"
         left_pad="14"
         width="100"
         height="16"
         label="L$"
         label_width="20"
         decimal_digits="0"
         increment="1"
         max_val="99999"
         follows="top|left"
         layout="topleft" />
        <combo_box
         name="group_mature_check"
         tool_tip="Maturity ratings designate the type of content and behavior allowed in a group"
         left="0"
         top_pad="8"
         right="-1"
         height="23"
         follows="left|right|top"
         layout="topleft">
            <combo_item name="select_mature" value="Select">
            - Select maturity rating -
            </combo_item>
            <combo_box.item
             label="Moderate Content"
             name="mature"
             value="Mature" />
            <combo_box.item
             label="General Content"
             name="pg"
             value="Not Mature" />
        </combo_box>
    </layout_panel>
    </layout_stack>
    </panel>
</panel>
